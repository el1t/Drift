<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="150dp"
	android:paddingLeft="8dp"
	android:paddingRight="8dp"
	android:paddingTop="4dp">

	<android.support.v7.widget.CardView
		android:layout_height="match_parent"
		android:layout_width="match_parent">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">
			<View
				android:id="@+id/date_box"
				android:layout_height="match_parent"
				android:layout_width="120dp"
				android:background="@color/accent"/>
			<TextView
				android:layout_width="120dp"
				android:layout_height="50dp"
				android:text="JAN"
				android:gravity="bottom|center_horizontal"
				android:textSize="@dimen/title_height"
				android:textColor="@color/white"
				android:id="@+id/history_item_month"/>

			<TextView
				android:layout_width="120dp"
				android:layout_height="100dp"
				android:text="12"
				android:gravity="center_horizontal"
				android:layout_below="@id/history_item_month"
				android:textSize="@dimen/display3_height"
				android:textColor="@color/white"
				android:id="@+id/history_item_date"/>

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/date_box"
				android:paddingLeft="8dp"
				android:paddingRight="16dp"
				android:paddingTop="16dp"
				android:text="Herndon, VA to Philadelphia, PA"
				style="@style/text_title"
				android:id="@+id/history_item_title"/>

			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/date_box"
				android:paddingLeft="8dp"
				android:paddingRight="16dp"
				android:paddingBottom="16dp"
				android:text="Jan 12, 6:29 PM - 8:25 PM"
				android:layout_below="@id/history_item_title"
				style="@style/text_subhead"
				android:id="@+id/history_item_subtitle"/>
		</RelativeLayout>
	</android.support.v7.widget.CardView>
</FrameLayout>