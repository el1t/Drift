<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_height="150dp"
	android:layout_width="match_parent"
	android:layout_margin="16dp">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
								android:orientation="horizontal"
								android:layout_width="match_parent"
								android:layout_height="match_parent">

		<FrameLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:background="@color/accent">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_gravity="center">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="JAN"
				android:textSize="@dimen/title_height"
				android:layout_gravity="center_horizontal"
				android:textColor="@color/white"
				android:id="@+id/history_item_month"
				/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="12"
				android:textSize="@dimen/display3_height"
				android:textColor="@color/white"
				android:layout_gravity="center_horizontal"
				android:id="@+id/history_item_date"/>

			</LinearLayout>

		</FrameLayout>

		<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="2"
			android:layout_margin="8dp">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Herndon, VA to Philadelphia, PA"
				style="@style/text_title"
				android:id="@+id/history_item_title"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Jan 12, 6:29 PM - 8:25 PM"
				android:layout_below="@id/history_item_title"
				style="@style/text_subhead"
				android:id="@+id/history_item_subtitle"
				android:layout_marginBottom="8dp"/>

			<fragment
				android:name="com.elmz.drift.ChartFragment"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_below="@id/history_item_subtitle"
				android:layout_alignParentBottom="true"
				tools:layout="@layout/chart"
				android:id="@+id/history_item_chart"/>

			</RelativeLayout>
	</LinearLayout>
</android.support.v7.widget.CardView>