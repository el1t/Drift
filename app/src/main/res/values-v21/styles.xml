<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
		<item name="android:colorPrimary">@color/primary</item>
		<item name="android:colorPrimaryDark">@color/primary_dark</item>
		<item name="android:colorAccent">@color/accent</item>
	</style>

	<style name="NoAppBarTheme" parent="android:Theme.Material.NoActionBar"></style>

	<style name="text_title">
		<item name="android:textSize">@dimen/title_height</item>
		<item name="android:textColor">@color/text_primary</item>
		<item name="android:layout_marginBottom">@dimen/title_margin_bottom</item>
	</style>

	<style name="text_body">
		<item name="android:textSize">@dimen/body_height</item>
		<item name="android:textColor">@color/text_primary</item>
	</style>

	<style name="text_subhead">
		<item name="android:textSize">@dimen/subhead_height</item>
		<item name="android:textColor">@color/text_primary</item>
	</style>

	<style name="text_hint">
		<item name="android:textSize">@dimen/caption_height</item>
		<item name="android:textColor">@color/text_hint</item>
	</style>

	<style name="button_raised" parent="android:style/Widget.Material.Button">
		<item name="android:background">@drawable/raised_button_background</item>
		<item name="android:layout_margin">8dp</item>
		<item name="android:textColor">@color/white</item>
		<item name="android:elevation">2dp</item>
		<item name="android:radius">4dp</item>
	</style>

	<style name="ui_row">
		<item name="android:layout_marginBottom">@dimen/ui_row_margin_bottom</item>
	</style>

	<style name="text_display1_disabled">
		<item name="android:textSize">@dimen/display1_height</item>
		<item name="android:textColor">@color/text_disabled</item>
	</style>

	<style name="text_display3">
		<item name="android:textSize">@dimen/display3_height</item>
		<item name="android:textColor">@color/text_primary</item>
	</style>

	<style name="text_disabled">
		<item name="android:textSize">@dimen/body_height</item>
		<item name="android:textColor">@color/text_disabled</item>
	</style>

	<style name="input_single_line">
		<item name="android:maxLines">1</item>
	</style>

	<style name="text_secondary">
		<item name="android:textSize">@dimen/body_height</item>
		<item name="android:textColor">@color/text_secondary</item>
	</style>
</resources>
